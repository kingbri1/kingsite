---
import { Image } from "astro:assets";
import fileBridgeLogo from "@public/FileBridge.png";
import downloadAppStoreLogo from "@/assets/DownloadAppStore.svg";
import Separator from "@/components/utils/separator.astro";
import SocialButtons from "@/components/utils/socialButtons.astro";
import MainLayout from "@/layouts/MainLayout.astro";
---

<MainLayout>
  <Fragment slot="head">
    <meta property="og:title" content="FileBridge" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://kingbri.dev/filebridge" />
    <meta property="og:description" content="An app that makes iOS cable file transfer easier" />
    <meta name="Description" content="An app that makes iOS cable file transfer easier" />
    <meta property="og:image" content="https://kingbri.dev/FileBridge.png" />
    <meta name="theme-color" content="#468fcc" />
    <link rel="icon" type="image/png" href="/FileBridge.png" />
    <title>FileBridge | Home</title>
  </Fragment>
  <div class="relative flex min-h-screen flex-col items-center justify-center tracking-wide">
    <div class="hidden md:block">
      <Separator />
    </div>
    <div class="flex-col text-center">
      <div class="p-5 lg:p-0">
        <Image
          src={fileBridgeLogo}
          alt="The FileBridge app icon"
          class="m-auto h-32 w-32 rounded-2xl lg:h-auto lg:w-auto"
        />
      </div>

      <p
        class="text-whitesmoke font-header text-4xl font-bold tracking-wide lg:text-6xl lg:leading-relaxed"
      >
        FileBridge
      </p>
      <p class="font-paragraph text-whitesmoke mt-4 px-3 text-lg lg:px-0 lg:text-2xl">
        A simple app to make iOS file transfer easier.
      </p>
    </div>
    <div class="mt-20 mb-16 inline-flex flex-col items-center justify-center">
      <a
        href="https://apps.apple.com/us/app/filebridge/id1562387073"
        target="_blank"
        rel="noreferrer noopener"
      >
        <Image
          src={downloadAppStoreLogo}
          alt="Download on the app store"
          class="h-12 w-screen lg:h-16"
        />
      </a>
      <ul class="mt-4 flex items-center lg:mt-6">
        <SocialButtons include={["github", "discord"]} />
      </ul>
    </div>
    <footer class="max-w-screen text-center">
      &#169; 2021-present kingbri |&nbsp;
      <span>
        <a href="filebridge/privacy_policy" class="text-blue-300 underline">Privacy Policy</a>
      </span>
    </footer>
  </div>
</MainLayout>
