---
import MainLayout from "@/layouts/MainLayout.astro";
---

<MainLayout>
  <Fragment>
    <head slot="header">
      <title>404</title>
    </head>
    <div class="flex min-h-screen flex-col justify-center">
      <div class="inline-flex grow flex-col justify-center text-center lg:grow-0">
        <!-- <h1 class="font-header text-yellow-300 text-7xl mb-12">404.</h1> -->
        <img src="https://http.cat/404" class="mb-12 w-xs self-center" alt="" />
        <h2 class="font-navigation mb-12 text-3xl font-bold lg:text-5xl">
          Looks like that page couldn&apos;t be found.
        </h2>
      </div>
      <div class="mb-8 self-center lg:mb-0">
        <button
          id="back-button"
          class="border-whitesmoke font-navigation hover:bg-whitesmoke mt-auto
          rounded-xl border-2 border-solid p-3 text-3xl font-bold duration-200
          hover:text-black"
        >
          Take me back!
        </button>
      </div>
    </div>
  </Fragment>
</MainLayout>

<script>
  document.getElementById("back-button")?.addEventListener("click", () => {
    window.history.back();
  });
</script>
