---
import { Image } from "astro:assets";
import manamiPortrait from "@public/Manami/portrait.png";
import ManamiGallery from "@/components/manami/gallery";
import LoreDescriptor from "@/components/manami/loreDescriptor.astro";
import { getImagesFromAssets } from "@/components/utils/images";
import Separator from "@/components/utils/separator.astro";
import SocialButtons from "@/components/utils/socialButtons.astro";
import MainLayout from "@/layouts/MainLayout.astro";
import ManamiRefCarousel from "@/components/manami/refCarousel";
import LinkButton from "@/components/utils/linkButton.astro";

const images = await getImagesFromAssets("Manami/Art");
const refSheet = await getImagesFromAssets("Manami/RefSheet");
---

<MainLayout>
  <Fragment slot="head">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta property="og:title" content="Manami Starling" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://kingbri.dev/manami" />
    <meta
      property="og:description"
      content="Hi! I'm Manami, a quantum physics student and robotics expert
      from the year 2077."
    />
    <meta
      name="Description"
      content="Hi! I'm Manami, a quantum physics student and robotics expert
      from the year 2077."
    />
    <meta property="og:image" content="https://kingbri.dev/Manami/portrait.png" />
    <meta name="theme-color" content="#88a2fa" />
    <title>Manami Starling</title>
  </Fragment>
  <article class="text-whitesmoke">
    <div class="hidden md:block">
      <Separator />
    </div>
    <div class="flex flex-col items-center">
      <h1
        class="font-header bg-linear-to-r from-blue-300 via-indigo-400 to-purple-300
        bg-clip-text p-8 text-center text-4xl text-transparent md:text-5xl lg:text-7xl"
      >
        Manami Starling
      </h1>
      <div
        class="bg-lightbg prose font-paragraph leading-spread inline-flex flex-col
        rounded-xl px-6 py-6 md:max-w-3xl lg:px-10 xl:max-w-4xl"
      >
        <h2 class="text-blue-300">Portrait</h2>
        <Image
          src={manamiPortrait}
          alt="Manami's portrait"
          class="m-auto h-auto w-1/3 rounded-2xl"
        />
        <h2 class="text-blue-300">Socials</h2>
        <div class="flex justify-center p-4">
          <ul class="inline-flex items-center">
            <SocialButtons include={["twitch", "youtube", "tiktok", "twitter", "discord"]} />
          </ul>
        </div>
        <h2 class="text-blue-300">Table of Contents</h2>
        <div class="flex justify-center gap-4">
          <LinkButton href="/manami/#refsheet">References</LinkButton>
          <LinkButton href="/manami/#stream">Stream</LinkButton>
          <LinkButton href="/manami/#lore">Lore</LinkButton>
          <LinkButton href="/manami/#gallery">Gallery</LinkButton>
        </div>
        <h2 class="text-blue-300">Overview</h2>
        <p>
          Manami is a quantum physics student and robotics expert in the year 2077, dedicated to
          study the secrets of the universe.
        </p>
        <h2 class="text-blue-300" id="refsheet">Reference Sheet</h2>
        <ManamiRefCarousel images={refSheet} client:load />
        <h2 class="text-blue-300" id="stream">Content</h2>
        <LoreDescriptor title="Streaming schedule">
          Fridays or Saturdays @ 9PM EST on Twitch
        </LoreDescriptor>
        <LoreDescriptor title="Content categories">
          Development, Articles, Medical education, Games, Collabs
        </LoreDescriptor>
        <h2 class="text-blue-300" id="lore">Demographics</h2>
        <LoreDescriptor title="Age">21 years old</LoreDescriptor>
        <LoreDescriptor title="Birthday">December 24th</LoreDescriptor>
        <LoreDescriptor title="Height">5' 6"</LoreDescriptor>
        <LoreDescriptor title="Weight">Hey! You know you shouldn't ask for that...</LoreDescriptor>
        <h2 class="text-blue-300">Background</h2>
        <LoreDescriptor title="Career">University student at BDIT</LoreDescriptor>
        <LoreDescriptor title="Major">Quantum physics</LoreDescriptor>
        <LoreDescriptor title="Life goal">To understand the secrets of the universe</LoreDescriptor>
        <LoreDescriptor title="Clubs"
          >Robotics club president, Goalie on BDIT soccer team, ghost member of anime club</LoreDescriptor
        >
        <LoreDescriptor title="Hobbies">
          Tinkering/creating machines, anime, video games, manga, sports
        </LoreDescriptor>
        <LoreDescriptor title="Traits">
          tomboy, athletic, intelligent, caring, dreamer, kind, honest, lively, selfless
        </LoreDescriptor>
        <LoreDescriptor title="Flaws">
          has an inferiority complex, doubts her intelligence, makes shallow friendships and only
          respects a few friends
        </LoreDescriptor>
        <h2 class="text-blue-300">Bluudale</h2>
        <LoreDescriptor title="Description">
          A technologically advanced metropolis with holographic skyscrapers, solar energy, mag-lev
          transport, and citizens that use AR enhanced glasses to interact with their surroundings.
        </LoreDescriptor>
        <LoreDescriptor title="BDIT">
          Short for Bluudale Institute of Technology. A prestigious university renowned for its
          engineering and physics programs. Serves as an insitution to further the world's knowledge
          of science and technology.
        </LoreDescriptor>
        <LoreDescriptor title="Brew Haven">
          A frequent stop for Bluudale denizens, Brew Haven serves seasonal coffee blends and unique
          pastries.
        </LoreDescriptor>
        <LoreDescriptor title="Bluudale Park">
          Located in the heart of Bluudale, the park is full of trees for fresh air and contains
          amenities such as a jogging trail, sport courts, and a picnic area with a central
          fountain.
        </LoreDescriptor>
        <h2 class="text-blue-300" id="gallery">Gallery</h2>
        <ManamiGallery images={images} client:load />
      </div>
    </div>
    <div class="md:hidden">
      <Separator />
    </div>
  </article>
</MainLayout>
