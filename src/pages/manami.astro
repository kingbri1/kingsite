---
import { Image } from 'astro:assets';
import ManamiGallery from '@/components/manami/gallery';
import LoreDescriptor from '@/components/manami/loreDescriptor.astro';
import { getImagesFromAssets } from '@/components/utils/images';
import Separator from '@/components/utils/separator.astro';
import MainLayout from '@/layouts/MainLayout.astro';
import manamiPortrait from '@public/Manami/portrait.png';
import SocialButtons from '@/components/utils/socialButtons.astro';

const images = await getImagesFromAssets('Manami/Art');
---

<MainLayout>
  <Fragment slot="head">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta property="og:title" content="Manami Starling" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://kingbri.dev/manami" />
    <meta
      property="og:description"
      content="Hi! I'm Manami, a quantum physics student and robotics expert from the year 2077."
    />
    <meta
      name="Description"
      content="Hi! I'm Manami, a quantum physics student and robotics expert from the year 2077."
    />
    <meta property="og:image" content="https://kingbri.dev/Manami/portrait.png" />
    <meta name="theme-color" content="#88a2fa" />
    <title>Manami Starling</title>
  </Fragment>
  <article class="text-whitesmoke">
    <div class="hidden md:block">
      <Separator />
    </div>
    <div class="flex flex-col items-center filebridge-privacy">
      <h1
        class="font-header text-center text-4xl md:text-5xl
        lg:text-7xl text-transparent bg-clip-text bg-linear-to-r
        from-blue-300 via-indigo-400 to-purple-300 p-8">
        Manami Starling
      </h1>
      <div
        class="inline-flex flex-col bg-lightbg prose font-paragraph
        leading-spread px-6 lg:px-10 py-6 md:max-w-3xl xl:max-w-4xl rounded-xl">
        <h2 class="text-blue-300">Portrait</h2>
        <Image
          src={manamiPortrait}
          alt="Manami's portrait"
          class="m-auto rounded-2xl w-1/3 h-auto"
        />
        <h2 class="text-blue-300">Socials</h2>
        <div class="flex p-4 justify-center">
          <ul class="inline-flex items-center">
            <SocialButtons include={["twitch", "youtube", "tiktok", "twitter", "discord"]} />
          </ul>
        </div>
        <h2 class="text-blue-300">Overview</h2>
        <p>
          Manami is a quantum physics student and robotics expert in the year 2077, dedicated to
          study the secrets of the universe.
        </p>
        <h2 class="text-blue-300">Content</h2>
        <LoreDescriptor
          title="Streaming schedule"
          text="Fridays or Saturdays @ 9PM EST on Twitch"
        />
        <LoreDescriptor
          title="Content categories"
          text="Development, Articles, Medical education, Games, Collabs"
        />
        <h2 class="text-blue-300">Demographics</h2>
        <LoreDescriptor title="Age" text="21 years old" />
        <LoreDescriptor title="Birthday" text="December 24th" />
        <LoreDescriptor title="Height" text={`5' 6"`} />
        <LoreDescriptor title="Weight" text="Hey! You know you shouldn't ask for that..." />
        <h2 class="text-blue-300">Background</h2>
        <LoreDescriptor title="Career" text="University student at BDIT" />
        <LoreDescriptor title="Major" text="Quantum physics" />
        <LoreDescriptor title="Life goal" text="To understand the secrets of the universe" />
        <LoreDescriptor
          title="Clubs"
          text="Robotics club president, Goalie on BDIT soccer team, ghost member of anime club"
        />
        <LoreDescriptor
          title="Hobbies"
          text="Tinkering/creating machines, anime, video games, manga, sports"
        />
        <LoreDescriptor
          title="Traits"
          text="tomboy, athletic, intelligent, caring, dreamer, kind, honest, lively, selfless"
        />
        <LoreDescriptor
          title="Flaws"
          text={`has an inferiority complex, doubts her intelligence, makes shallow friendships
          and only respects a few friends`}
        />
        <h2 class="text-blue-300">Bluudale</h2>
        <LoreDescriptor
          title="Description"
          text={`A technologically advanced metropolis with holographic skyscrapers, solar energy,
          mag-lev transport, and citizens that use AR enhanced glasses to interact with
          their surroundings.`}
        />
        <LoreDescriptor
          title="BDIT"
          text={`Short for Bluudale Institute of Technology. A prestigious university renowned
          for its engineering and physics programs. Serves as an insitution to further the
          world's knowledge of science and technology.`}
        />
        <LoreDescriptor
          title="Brew Haven"
          text={`A frequent stop for Bluudale denizens, Brew Haven serves seasonal coffee blends
          and unique pastries.`}
        />
        <LoreDescriptor
          title="Bluudale Park"
          text={`Located in the heart of Bluudale, the park is full of trees for fresh
          air and contains amenities such as a jogging trail, sport courts, and a picnic area
          with a central fountain.`}
        />
        <ManamiGallery images={images} client:load/>
      </div>
    </div>
    <div class="md:hidden">
      <Separator />
    </div>
  </article>
</MainLayout>
