---
import ferriteIcon from "@public/Ferrite.png";
import Separator from "@/components/utils/separator.astro";
import SocialButtons from "@/components/utils/socialButtons.astro";
import MainLayout from "@/layouts/MainLayout.astro";
import { Image } from "astro:assets";
---

<MainLayout>
  <Fragment slot="header">
    <meta property="og:title" content="Ferrite" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://kingbri.dev/ferrite" />
    <meta property="og:description" content="An app that makes torrent searching easier on iOS" />
    <meta name="Description" content="An app that makes torrent searching easier on iOS" />
    <meta property="og:image" content="https://kingbri.dev/Ferrite.png" />
    <meta name="theme-color" content="#d47355" />
    <link rel="icon" type="image/png" href="/Ferrite.png" />
    <title>Ferrite | Home</title>
  </Fragment>
  <div class="relative flex min-h-screen flex-col items-center justify-center tracking-wide">
    <div class="hidden md:block">
      <Separator />
    </div>
    <div class="flex-col text-center">
      <div class="p-5 lg:p-0">
        <Image
          src={ferriteIcon}
          alt="The Ferrite app icon"
          class="m-auto h-32 w-32 rounded-2xl lg:h-auto lg:w-auto"
        />
      </div>

      <p
        class="text-whitesmoke font-header text-4xl font-bold tracking-wide lg:text-6xl
        lg:leading-relaxed"
      >
        Ferrite
      </p>
      <p class="font-paragraph text-whitesmoke mt-4 px-3 text-lg lg:px-0 lg:text-2xl">
        A media searcher and debrid manager for iOS.
      </p>
    </div>
    <div class="mt-8 mb-16 inline-flex flex-col items-center justify-center lg:mt-12">
      <a
        href="https://github.com/kingbri1/Ferrite/releases"
        target="_blank"
        rel="noreferrer"
        class="text-whitesmoke border-whitesmoke hover:bg-whitesmoke rounded-md border-2 border-solid px-3 py-1 text-lg duration-500 hover:text-black lg:py-2 lg:text-xl"
      >
        Download
      </a>
      <ul class="mt-12 flex items-center lg:mt-8">
        <SocialButtons include={["github", "discord"]} />
      </ul>
    </div>
    <footer class="max-w-screen text-center">
      &#169; 2024-present kingbri |&nbsp;
      <span>
        <a href="ferrite/privacy_policy" class="text-blue-300 underline">Privacy Policy</a>
      </span>
    </footer>
  </div>
</MainLayout>
