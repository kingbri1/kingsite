---
import Separator from "@/components/utils/separator.astro";
import MainLayout from "./MainLayout.astro";
---

<MainLayout>
  <article class="text-whitesmoke">
    <div class="hidden md:block">
      <Separator />
    </div>
    <div class="flex flex-col items-center">
      <h1 class="font-header p-8 text-center text-4xl text-yellow-300 md:text-5xl lg:text-7xl">
        Privacy Policy
      </h1>
      <div
        class="bg-lightbg privacy-policy font-paragraph leading-spread inline-flex flex-col
      rounded-xl px-6 py-6 md:max-w-3xl lg:px-10 xl:max-w-4xl"
      >
        <slot />
      </div>
    </div>
    <div class="md:hidden">
      <Separator />
    </div>
  </article>
</MainLayout>
